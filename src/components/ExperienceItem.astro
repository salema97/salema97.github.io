---
import CalendarIcon from '../icons/Calendar.astro'
import LinkIcon from '../icons/Link.astro'
import Badge from './Badge.astro'

export interface Props {
	date: string
	title: string
	role: string
	description: string
	tags?: {
		name: string
		color: string
	}[]
	link?: string
}

const { date, title, role, description, tags, link } = Astro.props
---

<span
	class="absolute -start-3 flex h-6 w-6 items-center justify-center rounded-full bg-light-4 ring-8 ring-light-3 dark:bg-dark-3 dark:ring-dark-1"
>
	<CalendarIcon class="size-4 text-blue-900/80 dark:text-light-4" />
</span>
<time class="mb-2 block text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
	>{date}</time
>
<h3 class="mb-1 flex items-center text-2xl font-semibold text-gray-900 dark:text-white">
	{title}
</h3>

<h3 class="mb-1 flex items-center text-lg font-normal text-gray-900 dark:text-white">
	{role}
</h3>

<p class="mb-4 text-pretty text-base font-normal text-gray-600 dark:text-gray-300">
	{description}
</p>
{
	tags && (
		<ul class="mb-2 flex flex-wrap gap-x-2 gap-y-2">
			{tags.map((tags) => (
				<li>
					<Badge color={tags.color}>{tags.name}</Badge>
				</li>
			))}
		</ul>
	)
}
{
	link && (
		<a
			href={link}
			class="inline-flex items-center rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:text-blue-700 focus:outline-none focus:ring-4 focus:ring-gray-100 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white dark:focus:ring-gray-700"
		>
			Saber m√°s..
			<LinkIcon class="size-4" />
		</a>
	)
}
