---
export interface Props {
	color?: string
	icon?: any
}

let { color, icon: Icon } = Astro.props

if (!color) {
	color = 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300'
}
---

<span class=`${color} flex flex-row items-center me-2 rounded-md px-2.5 py-0.5 text-sm font-medium`>
	{Icon && <Icon className="mr-2 size-4" />}
	<slot />
</span>
